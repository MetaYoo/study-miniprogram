@import "./styles/iconfont.wxss";

/** 在微信小程序中是不支持 '*' */
page,
view,
text,
swiper,
swiper-item,
image,
navigator {
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}

/* 主题颜色， 通过变量实现 
 1. less 中存在变量这个知识
 2. 原生的css和wxss也是支持变量
*/

page {
  /*定义主题颜色*/
  --themeColor: #eb4450;
  /* 定义统一的字体大小，嘉盛设计稿大小是375px*/
  font-size: 28rpx;
}